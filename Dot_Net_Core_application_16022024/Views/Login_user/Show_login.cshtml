@model IEnumerable<Dot_Net_Core_application_16022024.Models.RR_table>

@{
    ViewData["Title"] = "Show_login";
}

<h5>All User login</h5>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">User Data</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" asp-action="Add_Login"></button>
      </div>
      <div class="modal-body">
                <table class="table table-hover">
                    <thead>
                        <tr style="background-color:lightblue">
                            <th>
                                @Html.DisplayNameFor(model => model.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                @* <td>
                            <a asp-action="Edit" asp-route-id="@item.rid">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.rid">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.rid">Delete</a>
                            </td>*@
                            </tr>
                        }
                    </tbody>
               </table>
       </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#exampleModal').modal('show');
    });
</script>


